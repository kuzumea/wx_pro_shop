.container1 {
  height: 100vh;
  background: #e2e1e1;
}
.item {
  border: solid #afaaaa 1px;
  height: 225rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 5rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
.item .item-img {
  font-size: 35rpx;
  color: #595d5e;
  flex: 2;
}
.item .item-img image {
  width: 100%;
  height: 180rpx;
}
.item .item-box1 .user-info {
  border: gray 1px solid;
  background: #b19595;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.item .item-box1 .user-info .user-head image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.item .name {
  border-bottom: 1px solid gray;
}
.item .item-box1 {
  flex: 1;
}
