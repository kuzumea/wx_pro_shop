/* pages/home/index.wxss */
.container-box {
  height: 100vh;
  /* display: flex;
  flex-direction: column; */
}
.swiper-bar {
  width: 100%;
  /* border:1px solid red; */
}
.navigate-box {
  margin-top: 20rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 1500rpx;
  border: 1px solid red;
  color: aliceblue;
  background: linear-gradient(to right, #fd8207, #f12d22);
}
.navigate-box .active {
  color: rgba(235, 235, 80, 0.842);
}
.navigate-box .navigate-item {
  margin: 20rpx 30rpx 40rpx 30rpx;
}
.item-box {
  width: 93%;
  margin: 35rpx 25rpx;
  height: 200rpx;
  border: 2rpx solid #797878;
  border-radius: 15rpx;
  display: flex;
  font-size: 35rpx;
  background: #e3ecf0;
}
.item-box .left-box {
  flex: 3;
}
.item-box .left-box image {
  width: 100%;
  height: 100%;
}
.item-box .right-box {
  margin-left: 15rpx;
  flex: 5;
}
.item-box .right-box .title {
  color: #000;
  font-weight: bold;
}
.item-box .right-box .f-title {
  color: grey;
}
.item-box .right-box .status {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 140rpx;
  background: #3cb749;
  color: #fff;
  border-radius: 18rpx;
}
.item-box .right-box .footer {
  display: flex;
  justify-content: center;
  align-items: center;
  justify-content: space-between;
  padding-right: 35rpx;
}
.item-box .right-box .footer .price {
  color: red;
  font-weight: bold;
}
.item-box .right-box .footer .price .ori-price {
  font-size: 20rpx;
  color: grey;
  text-decoration: line-through;
}
